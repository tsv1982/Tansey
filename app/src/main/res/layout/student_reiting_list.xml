<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TV_Reiting_Nomer_Porjadok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="1"
            android:textColor="@color/colorLentaNewsTitle" />

        <RelativeLayout
            android:layout_width="92dp"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/IV_Student_Reiting"
                android:layout_width="92dp"
                android:layout_height="48dp"
                android:src="@drawable/sergey" />

        </RelativeLayout>

        <TextView
            android:id="@+id/TV_Name_student_Reiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="тренер имя"
            android:textAlignment="center"
            android:textColor="@color/colorLentaNewsTitle"
            android:textSize="10dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/TV_SumOchki_student_Reiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="000"
            android:textAlignment="center"
            android:textColor="@color/colorLentaNewsTitle"
            android:textSize="10dp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <View android:background="#ffffff"
        android:layout_width = "match_parent"
        android:layout_height="1dp"/>


</LinearLayout>